@model PMF_Team01_MVC.Models.PublikacijaViewModels.PublikacijaVM

<div class="container">
    <div class="row">
        <form class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.BrojPublikacije"></label>
                <input asp-for="@Model.BrojPublikacije" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.DatumIzdavanja"></label>
                <input type="text" value="@Model.DatumIzdavanja.Value.ToShortDateString()" readonly class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Napomena"></label>
                <input asp-for="@Model.Napomena" readonly class="form-control" />
            </div>
        </form>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Type</td>
                    <td>Date Published</td>
                    <td>Details</td>
                </tr>
            </thead>
            <tbody>
                @{ 
                    foreach(var item in Model.ListaRadova)
                    {
                        <tr>
                            <td>@item.Naslov</td>
                            <td>@item.TipRada</td>
                            <td>@item.PublishDate</td>
                            <td><a asp-controller="Rad" asp-action="RadDetails" asp-route-id="@item.Id">Details</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>