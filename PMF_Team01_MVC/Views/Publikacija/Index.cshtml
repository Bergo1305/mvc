@model PMF_Team01_MVC.Models.PublikacijaViewModels.PublikacijaListVM

<div class="row">
    <form asp-controller="Publikacija" asp-action="Index" method="get">
        <label for="number">Publication Number:</label>
        <input type="text" class="rounded" id="numberInput" name="number" />
        <input type="submit" class="btn btn-sm btn-outline-dark" id="searchBtn" value="Search">
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Publication Number</td>
                <td>Date Published</td>
                <td>Action 1</td>
                <td>Action 2</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Publikacije)
            {
                <tr>
                    <td>@item.BrojPublikacije</td>
                    @{
                        if (item.DatumIzdavanja.HasValue)
                        {
                            <td>@item.DatumIzdavanja.Value.ToShortDateString()</td>
                        }
                        else
                        {
                            <td>Not Published</td>
                        }
                    }
                    <td><a class="btn btn-outline-dark btn-sm" asp-controller="Publikacija" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                    <td><a class="btn btn-outline-dark btn-sm">Action 2</a></td>
                </tr>

            }
        </tbody>
    </table>
    <div class="row">
        <a class="btn btn-outline-dark btn-sm" asp-controller="Publikacija" asp-action="AddNew">Add New</a>
    </div>
</div>