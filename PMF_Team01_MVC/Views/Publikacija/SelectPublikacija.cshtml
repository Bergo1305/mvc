@model PMF_Team01_MVC.Models.PublikacijaViewModels.PublikacijaSelectVM

@{ 
    Layout = null;
}

<div class="row">
    <form asp-controller="Publikacija" asp-action="DodajRad2">
        <div class="form-group" hidden>
            <input asp-for="@Model.radID" value="@Model.radID" readonly />
        </div>
        <div class="form-group">
            <label>Publication Number</label>
            <select asp-for="@Model.publikacijaID" asp-items="@Model.Publikacije" class="form-control"></select>
        </div>
        <div class="form-control">
            <input type="submit" value="Select" class="btn btn-outline-dark btn-sm" />
        </div>
    </form>
</div>