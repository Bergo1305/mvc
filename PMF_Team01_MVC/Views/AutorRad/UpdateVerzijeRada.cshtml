@model PMF_Team01_MVC.Models.AutorRadViewModels.UpdateVerzijeRadaVM

<div class="row">
    <form asp-controller="AutorRad" asp-action="UpdateVerzijeRada" method="post" enctype="multipart/form-data" style="margin-left: 37%;">
        <div class="form-group" hidden>
            <input asp-for="@Model.RadId" value="@Model.RadId" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.NazivRada">Title</label>
            <input asp-for="@Model.NazivRada" value="@Model.NazivRada" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Document"></label>
            <input asp-for="@Model.Document" class="form-control" accept=".pdf" required />
        </div>
        <input type="submit" value="Submit" class="btn btn-danger" />
    </form>
</div>