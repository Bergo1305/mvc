<script>
    $('#showCommentsReviewer').click(function () {
        $.ajax({
            type: 'GET',
            url: '/AutorRecenzent/PrivatniKomentariIndex',
            data: { radId: @Model.Id.ToString(), isAuthor: '0' },
            success: function (result) {
                $('#privatniKomentariDiv').html(result);
            }
        });
    });

    $('#ocijeniRadRecBtn').click(function () {
        $.ajax({
            type: 'GET',
            url: '/Recenzent/OcijeniRadRecenzent',
            data: { id: @Model.Id.ToString()},
            success: function (result) {
                $('#ocijeniRadRecenzent').html(result);
            }
        });
    });

    $('#addReviewBtn').click(function () {
        $.ajax({
            url: '/Recenzent/AddRecenzija',
            data: { id: @Model.Id},
            success: function (result) {
                $('#addReviewDiv').html(result);

            }

        });
    });
</script>

