@model PMF_Team01_MVC.Models.ReviewerViewModels.DodijeliRecenzentaVM

<div class="row">
    <table class="table table-striped">
        
        <tbody>
            <tr><th colspan="3" class="text-center">Asigned Reviewers</th></tr>
            @foreach (var item in Model.DodijeljeniRecenzenti)
            {
                <tr class="text-center">
                    <td>@item.Username</td>
                    <td class="text-left">
                        @foreach(var obl in item.Oblasti)
                        {
                            <span>@obl |</span>

                        }
                    </td>
                    <td style="text-align: center"><a class="btn btn-outline-dark btn-sm" asp-controller="Recenzent" asp-action="UkloniRecenzenta" asp-route-radId="@Model.RadId" asp-route-recenzentId="@item.Id">Remove</a></td>
                </tr>

            }
            <tr><th colspan="3" style="text-align: center;">Available Reviewers</th></tr>
            @foreach (var item in Model.Recenzenti)
            {
                <tr class="text-center">
                    <td>@item.Username</td>
                    <td>
                        @foreach (var obl in item.Oblasti)
                        {
                            <span>@obl |</span>

                        }
                    </td>
                    <td style="text-align: center"><a class="btn btn-outline-dark btn-sm" asp-controller="Recenzent" asp-action="DodijeliRecenzentaSave" asp-route-radId="@Model.RadId" asp-route-recenzentId="@item.Id">Add</a></td>
                </tr>

            }
        </tbody>
    </table>
    
    <a class="btn btn-outline-dark btn-sm" asp-controller="Admin" asp-action="AdminRadDetails" asp-route-id="@Model.RadId">Go Back</a>
    
</div>