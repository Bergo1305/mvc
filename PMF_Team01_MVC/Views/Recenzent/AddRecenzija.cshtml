@model PMF_Team01_MVC.Models.RecenzentViewModels.AddRecenzijaVM

@{ 
    Layout = null;
}
    <form class="col-md-4" asp-controller="Recenzent" asp-action="AddRecenzija" method="post" enctype="multipart/form-data">
        <div class="form-group" hidden>
            <input asp-for="@Model.EKnjigaId" value="@Model.EKnjigaId" readonly />
        </div>
        <div class="form-group" hidden>
            <input asp-for="@Model.RecenzentId" value="@Model.RecenzentId" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.File">File:</label>
            <input asp-for="@Model.File" class="form-control" accept=".pdf" required title="This field is required!" />
        </div><br />
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-outline-dark btn-sm" />
        </div>
    </form>
