@model PMF_Team01_MVC.Models.RadViewModels.DodajKomentarVM

@{ 
    Layout = null;
}

<form class="col-md-8" asp-controller="Rad" asp-action="UrediKomentar" method="post">
    <div class="form-group" hidden>
        <input asp-for="@Model.KomentarId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Sadrzaj"></label>
        <input asp-for="@Model.Sadrzaj" class="form-control" required title="This field can not be empty"/>
    </div>
    <input type="submit" value="Submit" class="btn btn-sm btn-outline-dark" />
</form>